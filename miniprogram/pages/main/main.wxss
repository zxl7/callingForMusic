/* 我的主页封面 */

.profile-header {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height: 480rpx;
  box-shadow: 0 2rpx 2rpx 3rpx rgba(0, 0, 0, 0.1);
  color: #fff;
  background-size: cover;
  font-family: Arial, "PingFang SC", "Hiragino Sans GB", STHeiti, "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
  background-image: url(https://th.bing.com/th/id/R.7c757d05fae9c6c2cac1957820339a6e?rik=LnRRz0TAOrl%2bgA&riu=http%3a%2f%2fi2.hdslb.com%2fbfs%2farchive%2fae39261c97a1f5238bd1ade420284afe160faac7.jpg&ehk=xLhigzZgCZGVEiVx9CCkDKXm08ov2HqUPhN35sdjQfE%3d&risl=&pid=ImgRaw&r=0);
}

.avatar-url {
  overflow: hidden;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.nickname {
  margin-top: 14rpx;
  font-size: 36rpx;
}

.icon-pifu,
.icon-touxiang {
  font-size: 24rpx;
}

.replace-theme {
  top: 30rpx;
}

.head-frame {
  top: 100rpx;
}

.theme-text {
  font-size: 24rpx;
  margin-top: 4rpx;
  margin-left: 10rpx;
}

.sign-day {
  position: absolute;
  display: flex;
  align-items: center;
  top: 28rpx;
  left: 20rpx;
  width: 110rpx;
  height: 48rpx;
  background: #f3f3f38c;
  color: #252525;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.sign-text {
  font-size: 24rpx;
  margin-left: 6rpx;
}

/* 我的主页导航栏 */

.profile-nav {
  width: 90%;
  margin: 40rpx auto;
  border-radius: 20rpx;
  height: 100%;
  padding: 68rpx;
  background: #fff;
  box-sizing: border-box;
}

.nav-item {
  position: relative;
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 6rpx;
  background: #fff;
  color: #383838;
  margin-bottom: 8rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

.nav-item:nth-child(5) {
  margin-bottom: 60rpx;
}

.nav-item:nth-child(5),
.nav-item:last-child {
  border-bottom: none;
  font-size: 36rpx;
}

.icon-nav {
  font-size: 38rpx;
  margin-left: 8rpx;
  color: #d81e06;
}

.icon-arr-right {
  float: right;
}

.text {
  position: absolute;
  left: 68rpx;
  font-size: 28rpx;
  color: #4d4d4d;
}

/* 二维码弹窗 */

.qrcode-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 98;
}

.popup {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  top: 300rpx;
  left: -500rpx;
  width: 500rpx;
  height: 600rpx;
  z-index: 99;
  background: #fff;
  border-radius: 20rpx;
}

.showAnimation {
  animation-duration: 1s;
  animation-name: sAnimation;
  animation-fill-mode: forwards;
}

@keyframes sAnimation {
  0% {
    left: -500rpx;
  }

  30% {
    left: 130rpx;
  }

  70% {
    left: 150rpx;
  }

  100% {
    left: 130rpx;
  }
}

.popup-title {
  font-family: "PingFang SC", "Microsoft YaHei", "WenQuanYi Micro Hei", sans-serif;
  font-size: 34rpx;
  color: #000;
  text-align: center;
  width: 100%;
  height: 60rpx;
  line-height: 36rpx;
  border-bottom: 1rpx solid #eee;
}

.popup-img {
  width: 360rpx;
  height: 360rpx;
  padding: 20rpx;
  margin: 10rpx 0;
}

.popup-img image {
  width: 360rpx;
  height: 360rpx;
}

.popup-content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 60rpx;
}

.load-img,
.share-img {
  text-align: center;
  width: 50%;
  flex: 1;
}

.share-img {
  border: 0;
  background: transparent;
}

.share-img::after {
  border: none;
}

.icon-xiazai,
.icon-13 {
  font-size: 44rpx;
  color: rgb(216, 30, 6);
}
